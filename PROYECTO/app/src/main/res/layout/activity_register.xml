<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/registrobtn"
        android:layout_width="225dp"
        android:layout_height="53dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="84dp"
        android:onClick="RegisteronClick"
        android:text="Registrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmacionText" />

    <EditText
        android:id="@+id/MailText"
        android:layout_width="235dp"
        android:layout_height="62dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="text"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="232dp"
        android:layout_height="57dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MailText" />

    <EditText
        android:id="@+id/Contrase単aText"
        android:layout_width="232dp"
        android:layout_height="61dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/ConfirmacionText"
        android:layout_width="228dp"
        android:layout_height="58dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="223dp"
        android:layout_height="38dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="36dp"
        android:text="Contrase単a"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="224dp"
        android:layout_height="37dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="12dp"
        android:text="Confirma  contrase単a"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Contrase単aText" />
</androidx.constraintlayout.widget.ConstraintLayout>